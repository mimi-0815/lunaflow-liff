  <script>
    // ========== è¨­å®š ==========
    const CONFIG = {
      LIFF_ID: '2008358460-7ZLAoV3K',
      STRIPE_LINKS: {
        light: 'https://buy.stripe.com/test_00wdR90j8fprfVo7pjc7u01',
        standard: 'https://buy.stripe.com/test_5kQ6oHd5U6SV24y9xrc7u00',
        premium: 'https://buy.stripe.com/test_9B6aEXc1Q6SVbF810Vc7u02'
      }
    };
    
    let selectedPlan = 'standard';
    let userProfile = null;
    
    // ========== åˆæœŸåŒ– ==========
    window.onload = async function() {
      try {
        // LIFFåˆæœŸåŒ–
        await liff.init({ liffId: CONFIG.LIFF_ID });
        
        // ãƒ­ã‚°ã‚¤ãƒ³ç¢ºèª
        if (!liff.isLoggedIn()) {
          liff.login();
          return;
        }
        
        // ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«å–å¾—
        userProfile = await liff.getProfile();
        
        // UIè¡¨ç¤º
        document.getElementById('loading').style.display = 'none';
        document.getElementById('main').style.display = 'block';
        
        // ãƒ—ãƒ©ãƒ³é¸æŠã‚¤ãƒ™ãƒ³ãƒˆ
        setupPlanSelection();
        
        // æ±ºæ¸ˆãƒœã‚¿ãƒ³ã‚¤ãƒ™ãƒ³ãƒˆ
        setupPaymentButton();
        
      } catch (error) {
        showError('åˆæœŸåŒ–ã‚¨ãƒ©ãƒ¼: ' + error.message);
        console.error('LIFF Init Error:', error);
      }
    };
    
    // ========== ãƒ—ãƒ©ãƒ³é¸æŠ ==========
    function setupPlanSelection() {
      document.querySelectorAll('.plan-option').forEach(option => {
        option.addEventListener('click', function() {
          document.querySelectorAll('.plan-option').forEach(o => o.classList.remove('selected'));
          this.classList.add('selected');
          selectedPlan = this.getAttribute('data-plan');
        });
      });
    }
    
    // ========== æ±ºæ¸ˆãƒœã‚¿ãƒ³ ==========
    function setupPaymentButton() {
      document.getElementById('payBtn').addEventListener('click', async function() {
        if (!userProfile) {
          showError('ãƒ¦ãƒ¼ã‚¶ãƒ¼æƒ…å ±ãŒå–å¾—ã§ãã¾ã›ã‚“ã§ã—ãŸ');
          return;
        }
        
        this.disabled = true;
        this.textContent = 'å‡¦ç†ä¸­...';
        document.getElementById('status').textContent = 'Stripeãƒšãƒ¼ã‚¸ã¸ç§»å‹•ä¸­...';
        
        try {
          // URLãƒ‘ãƒ©ãƒ¡ãƒ¼ã‚¿ã‹ã‚‰ç´¹ä»‹è€…IDã‚’å–å¾—
          const urlParams = new URLSearchParams(window.location.search);
          const ref = urlParams.get('ref');
          let referrerId = '';
          
          if (ref) {
            try {
              referrerId = atob(ref);
            } catch (e) {
              console.error('Ref decode error:', e);
            }
          }
          
          // Stripeæ±ºæ¸ˆURLã‚’ç”Ÿæˆ
          const baseUrl = CONFIG.STRIPE_LINKS[selectedPlan];
          const stripeUrl = baseUrl + 
            '?client_reference_id=' + encodeURIComponent(userProfile.userId) +
            '&metadata[plan]=' + encodeURIComponent(selectedPlan) +
            '&metadata[referrer_id]=' + encodeURIComponent(referrerId);
          
          // Stripeãƒšãƒ¼ã‚¸ã¸ãƒªãƒ€ã‚¤ãƒ¬ã‚¯ãƒˆ
          window.location.href = stripeUrl;
          
        } catch (error) {
          showError('ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: ' + error.message);
          this.disabled = false;
          this.textContent = 'æ±ºæ¸ˆãƒšãƒ¼ã‚¸ã¸é€²ã‚€';
          document.getElementById('status').textContent = 'æº–å‚™å®Œäº†';
        }
      });
    }
    
    // ========== ã‚¨ãƒ©ãƒ¼è¡¨ç¤º ==========
    function showError(message) {
      const errorDiv = document.getElementById('error');
      errorDiv.textContent = message;
      errorDiv.style.display = 'block';
      document.getElementById('loading').style.display = 'none';
      document.getElementById('main').style.display = 'block';
    }
  </script>
